<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp">


       <ImageView
           android:id="@+id/imvAppIcon"
           android:layout_width="@dimen/icon_app_dimen"
           android:layout_height="@dimen/icon_app_dimen"
           android:src="@mipmap/ic_app_provisional"
           />

       <ImageView
           android:clickable="true"
           android:id="@+id/imvPadlock"
           android:layout_width="@dimen/icon_app_dimen"
           android:layout_height="@dimen/icon_app_dimen"
           android:src="@drawable/padlock_open"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="@dimen/wiget_margin_rigth"
           android:layout_marginEnd="@dimen/wiget_margin_rigth"
           />

       <TextView
           android:id="@+id/txvAppName"
           android:layout_marginTop="@dimen/wiget_margin_top_aling"
           android:layout_marginLeft="@dimen/wiget_margin_left"
           android:layout_marginStart="@dimen/wiget_margin_left"
           android:layout_marginRight="@dimen/wiget_margin_rigth"
           android:layout_marginEnd="@dimen/wiget_margin_rigth"
           android:text="Nombre de la app"
           android:textStyle="bold"
           android:textColor="#000"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/imvAppIcon"
           android:layout_toEndOf="@id/imvAppIcon"
           android:layout_toLeftOf="@id/imvPadlock"
           android:layout_toStartOf="@id/imvPadlock"
           />
       <TextView
           android:id="@+id/txvAppSystem"
           android:layout_marginTop="@dimen/wiget_margin_top_aling"
           android:layout_marginLeft="@dimen/wiget_margin_left"
           android:layout_marginStart="@dimen/wiget_margin_left"
           android:layout_marginRight="@dimen/wiget_margin_rigth"
           android:layout_marginEnd="@dimen/wiget_margin_rigth"
           android:text="Es aplicaciÃ³n del sistema"
           android:layout_below="@id/txvAppName"
           android:textStyle="bold"
           android:textColor="#000"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/imvAppIcon"
           android:layout_toEndOf="@id/imvAppIcon"
           android:layout_toLeftOf="@id/imvPadlock"
           android:layout_toStartOf="@id/imvPadlock"
           />

   </RelativeLayout>


</android.support.v7.widget.CardView>